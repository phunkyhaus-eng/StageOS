project_name = "stageos"
environment  = "staging"
aws_region   = "us-east-1"

# Cost-efficient defaults:
# - ECS tasks run in public subnets (no NAT)
# - t4g micro classes for DB/Redis
create_nat_gateway         = false
launch_in_private_subnets  = false
api_desired_count          = 1
web_desired_count          = 1
worker_desired_count       = 1

api_image = "ghcr.io/ORG/REPO/stageos-api:staging"
web_image = "ghcr.io/ORG/REPO/stageos-web:staging"

db_name           = "stageos"
db_username       = "stageos"
db_instance_class = "db.t4g.micro"
db_multi_az       = false

redis_node_type    = "cache.t4g.micro"
redis_cluster_size = 1

# Optional custom domains.
web_domain = ""
api_domain = ""

# Set this to enable HTTPS listener.
acm_certificate_arn = ""

# Runtime integration secrets.
stripe_secret_key        = ""
stripe_webhook_secret    = ""
stripe_price_pro         = ""
stripe_price_touring_pro = ""

# Required for StageOS runtime S3 auth.
s3_access_key = "REPLACE_ME"
s3_secret_key = "REPLACE_ME"
